<html class="noscroll">
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const params = new URLSearchParams(window.location.search);
            if (params.has('error')) {
            alert(params.get('error'));
            window.location.href = "/createuser";
            }
        });
    </script>
    <%- include("./partials/head") %>
    <body id="body-login">
        <%- include("./partials/nav") %>
        <div id="login-content">
            <div id="login-main">
                <div id="login-text">
                    <h1>Lag Bruker</h1>
                </div>
                <form id="login-input" action=""  method="POST">
                    <div>
                        <h1>Skriv Epost</h1>
                        <input type="username" name="brukernavn" id="login-email" placeholder="Email" class="login" autocomplete="off" required>
                        <h1>Skriv passord</h1>
                        <input type="password" name="password" id="login-password" placeholder="Password" class="login" required>
                        <h1>Skriv Passord Igjenn</h1>
                        <input type="password" name="repeatPassword" id="login-password" placeholder="Password" class="login" required>
                    </div>
                    <div class="flex">
                        <button id="CreateUser" alt="Lag Ny Bruker">
                            <i>L</i>
                            <i>A</i>
                            <i>G</i>
                            <i>&nbsp;</i>
                            <i>N</i>
                            <i>Y</i>
                            <i>&nbsp;</i>
                            <i>B</i>
                            <i>R</i>
                            <i>U</i>
                            <i>K</i>
                            <i>E</i>
                            <i>R</i>
                        </button>
                    </div>
                </form>
                <h2>Har allerede an bruker?</h2>
                <a href="/login" id="nostyle">
                    <div class="flex">
                        <button id="LoggInn" alt="Logg inn">
                            <i>L</i>
                            <i>O</i>
                            <i>G</i>
                            <i>G</i>
                            <i>&nbsp;</i>
                            <i>I</i>
                            <i>N</i>
                            <i>N</i>
                        </button>
                    </div>
                </a>
            </div>
        </div>
    </body>
</html>
