<%- include("./partials/head") %>
 
<body>
    <!-- <%- include("./partials/nav") %> -->
    <div class="main-guide"> 
        <div class="grid-container">
            <div id="side">
                <div>
                    <a href="/" id="back">&larr;</a>
                </div>
                <div id="side-links">
                    <div id="top">
                        <% if (guides.length > 0) { %>
                            <% guides.forEach(guide => { %>
                                <% if (guide.overskrift && guide.overskrift.length > 0) { %>
                                    <% guide.overskrift.forEach((heading, index) => { %>
                                        <a href="#guide-<%= guide._id %>-<%= index %>"><%= heading %></a><br>
                                    <% }); %>
                                <% } else { %>
                                    <p>No headings found</p>
                                <% } %>
                            <% }); %>
                        <% } %>
                    </div>
                    <div id="bottom">
                        <a href="/">Home</a>
                        <a href="/login">Login</a>
                    </div>
                </div>                
            </div>
 
            <div id="guide-content">
                <h1 id="top-guide">Guides</h1>
                <% if (guides.length > 0) { %>
                    <div class="guides-list">
                        <% guides.forEach(guide => { %>
                            <div class="guide-item" id="guide-<%= guide._id %>">
                                <h2 class="guide-h2"><%= guide.author %></h2>
                                <h2 class="guide-h2"><%= guide.tittel %></h2>
                                <p><strong>Tag:</strong> <%= guide.tag %></p>
                                <% guide.overskrift.forEach((heading, index) => { %>
                                    <h3 id="guide-<%= guide._id %>-<%= index %>"><%= heading %></h3>
                                    <p><%= guide.beskrivelse[index] %></p>
                                    <img src="<%= guide.bilde[index] %>" alt="Guide Image" class="guide-image">
                                <% }); %>
                            </div>
                            <% if (user && guide.author === user.email) { %>
                                <a href="/editGuide/<%= guide._id %>">Edit</a>
                            <% } %>
                        <% }); %>
                    </div>                    
                <% } else { %>
                    <p>Ingen guider funnet.</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
 