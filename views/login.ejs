<html class="noscroll">
    <%- include("./partials/head") %>
    <body id="body-login">
        <%- include("./partials/nav") %>
        <div id="login-content">
            <div id="login-main">
                <div id="login-text">
                    <h1>Login</h1>
                </div>
                <form id="login-input" action=""  method="POST">
                    <h1>Enter username</h1>
                    <input type="username" name="login" id="login-email" placeholder="Username" class="login">
                    <h1>Enter password</h1>
                    <input type="password" name="password" id="login-password" placeholder="Password" class="login">
                    <button class="styled-button" id="right">Login</button>
                </form>
                <div id="login-buttons">
                        <button class="styled-button" id="left">Create new user</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>